@model IEnumerable<Pintxopote.Models.Balorazioa>
@{
    ViewData["Title"] = "PintxoOnena";
    int erabiltzaileak = 0;
    int guztira = Model.Count();
    int batuketa = 0;
    float batazbestekoa = 0;
}
<div class="box">
    <div class="col-lg-12">
        <hr>
        <h2 class="intro-text text-center">
            Pintxorik
            <strong>Onena</strong>
        </h2>
        <hr>
    </div>
    @foreach (var item in Model)
    {
        batuketa = batuketa + item.nota;
        erabiltzaileak++;
        if (erabiltzaileak==guztira)
        {
            batazbestekoa = (float) batuketa / erabiltzaileak;
            <div class="col-md-6">
                <img class="img-responsive img-border-left pintxoa-argazkia" src="@Html.DisplayFor(modelItem => item.Pintxo.argazkia)" alt="">
            </div>
            <div class="col-md-6">
                <p>Une honetan, hau da pintxorik hobeena.</p>
                <p><i><b>@Html.DisplayFor(modelItem => item.Tabernak.izena)</b></i>-ko <i><b>@Html.DisplayFor(modelItem => item.Pintxo.izena)</b></i> pintxoa </p>
                <p><i><b>@erabiltzaileak</b></i> erabiltzailek eman dute botoa, <i><b>@batazbestekoa</b></i> delarik bere batazbezteko nota.</p>
            </div>
            <div class="clearfix"></div>
        }
    }
</div>
