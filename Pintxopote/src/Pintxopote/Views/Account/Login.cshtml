@using System.Collections.Generic
@using Microsoft.AspNet.Http
@using Microsoft.AspNet.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Logeatu";
}
<div class="row">
    <div class="box">
        <h2>Logeatu</h2>
        <div class="row">
            <div class="col-md-8">
                <section>
                    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                        <h4></h4>
                        <hr />
                        <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Emaila:</label>
                            <div class="col-md-10">
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Pasahitza:</label>
                            <div class="col-md-10">
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <div class="checkbox">
                                    <input asp-for="RememberMe" />
                                    <label>Gogoratu</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn btn-default">Logeatu</button>
                            </div>
                        </div>
                        <p>
                            <a asp-action="Register">Erabiltzaile berria?</a>
                        </p>
                        <p>
                            <a asp-action="ForgotPassword">Pasahitza ahastu duzu?</a>
                        </p>
                    </form>
                </section>
            </div>
            
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
